<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:padding="16dp">

    <!-- Title (Fixed at the top) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Schedule"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingBottom="24dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Monday -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:backgroundTint="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/mondayMorningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning: Thepla"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/mondayAfternoonView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon: Undhiyu"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/mondayEveningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening: Handvo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tuesday -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:backgroundTint="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/tuesdayMorningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning: Paratha"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/tuesdayAfternoonView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon: Chole Bhature"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/tuesdayEveningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening: Kachori"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Wednesday -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:backgroundTint="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/wednesdayMorningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning: Idli"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/wednesdayAfternoonView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon: Sambar Rice"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/wednesdayEveningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening: Vada"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Thursday -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:backgroundTint="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/thursdayMorningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning: Poha"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/thursdayAfternoonView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon: Paneer Tikka"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/thursdayEveningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening: Pani Puri"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Friday -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:backgroundTint="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/fridayMorningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning: Dosa"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/fridayAfternoonView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon: Biryani"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/fridayEveningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening: Samosa"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Saturday -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:backgroundTint="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/saturdayMorningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning: Aloo Paratha"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/saturdayAfternoonView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon: Rajma Chawal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/saturdayEveningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening: Chole Tikki"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sunday -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="16dp"
                android:backgroundTint="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/sundayMorningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning: Upma"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/sundayAfternoonView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afternoon: Pulao"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/sundayEveningView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evening: Pakora"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Button (Fixed at the bottom) -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#F44336"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

</LinearLayout>
